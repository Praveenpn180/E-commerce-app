{{#each orders}}

<div class="container rr">
    
    <article class="card">
        <header class="card-header"> My Orders / Tracking </header>
        <div class="card-body">

            <h6>Order ID : {{_id}}</h6>
            <article class="card">
                <div class="card-body row">
                    <div class="col"> <strong>Estimated Delivery time:</strong> <br>{{this.delivaryAddress.date}} </div>
                    <div class="col"> <strong>Shipping BY:</strong> <br> BLUEDART, | <i class="fa fa-phone"></i>
                        +1598675986 </div>
                    <div class="col"> <strong>Status:</strong>
                        {{#if placed}}
                           <br>delivarystatus : {{ delivarystatus}}<br> status : {{products.products.orderStatus}} </div>
                    <div class="col"> <strong>Tracking #:</strong> <br> BD045903594059 </div>
                        {{else}}
                          <br><h5 class="text-danger">{{products.products.Cancelled}}</h5>
                  
                    {{/if}}
                    {{#if delivered}}
                    <a href="/invoice/{{_id}}/{{products.products.item}}">download invoice</a>
                    {{/if}}
                </div>
            </article>
            <div class="track">
                <div class="step {{#if placed}}active{{/if}}" id="element"> <span class="icon"> <i class="fa fa-check"></i> </span> <span
                        class="text">Order confirmed</span> </div>
                <div class="step {{#if shipped}}active{{/if}}"> <span class="icon"> <i class="fa fa-user"></i> </span> <span class="text">
                        Picked by courier</span> </div>
                <div class="step {{#if shipped}}active{{/if}}"> <span class="icon"> <i class="fa fa-truck"></i> </span> <span class="text"> On the
                        way </span> </div>
                <div class="step {{#if delivered}}active{{/if}}"> <span class="icon"> <i class="fa fa-box"></i> </span> <span class="text">Deliverd
                        pickup</span> </div>
            </div>
            <hr>


            <div class="row">
                <div class="col-md-6 ">
                    <ul class="">

                        <li class="">
                            <figure class="itemside mb-3">
                                <div class="width"><img src="/product-images/{{products.products.product._id}}.jpg" class="dd"></div>
                                <figcaption class="info align-self-center">
                                    <h5 class="title">{{products.products.product.Name}} <br><br> RS : {{products.products.product.Price}}</h5> <span
                                        class="text-muted"> Quantity : {{products.products.quantity}}
                                    </span>
                                    <br><br>
                                    <h5 class="title">Sub Total : {{total}}</h5>
                                    <br>
                                    <h5 class="title text-success">Discount : {{discount}}</h5><br>
                                    <br>
                                    <h5 class="title text-success font-weight-bold">Final Price : {{finalPrice}}</h5>
                                    <p></p>
                                </figcaption>
                            </figure>
                        </li>

                    </ul>
                </div>
                <div class="col-md-5 ml-5 mt-5">
                        <h4>Ordered on : {{date}}</h4><br>
                        <h4>Payment Method : {{paymentMethod}}</h4><br>
                        <h4>Order Status : {{products.products.orderStatus}}</h4>
                        <br><br>

                         <div class="">
                {{#if placed}}
                 <a href="/orderCancel/{{_id}}/{{products.products.item}}"  class="btn btn-danger">Cancel Order<i
                    class="fa fa-chevron-right"></i></a>
                    {{/if}}

               
            </div>
            <br><br>
                </div>
                <div>
                <h4>Delivery Address</h4>
                <br><br>
                <h5>{{deliveryDetails.Name}}</h5>
                <h5>{{deliveryDetails.Email}}</h5>
                <h5>{{deliveryDetails.Phone}}</h5>
                <h5>{{deliveryDetails.Address}}</h5>
                <h5>{{deliveryDetails.City}}</h5>
                <h5>{{deliveryDetails.State}}</h5>
                <h5>{{deliveryDetails.Pincode}}</h5>

                
                </div>




            </div>


           
        
            {{!-- <a href="" class="btn btn-warning" data-abc="true"> <i class="fa fa-chevron-left"></i> Back to orders</a>
            <a href="/view-order-products/{{this._id}}" data-abc="true" class="btn btn-primary"><i
                    class="fa fa-chevron-right"></i>View Product</a> --}}
           

        </div>
    </article>
</div>
{{/each}}


