<!-- Section: Design Block -->
<section class="mt-5">
  <!-- Jumbotron -->
  <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
    <div class="container">
      <div class="row gx-lg-5 align-items-center">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <h1 class="my-5 display-3 fw-bold ls-tight">
             The Store <br />
            <span class="text-primary">So close to your heart</span>
          </h1>
          <p style="color: hsl(217, 10%, 50.8%)">
            ZangoStore is a digital retail chain of stores with operations across GCC. We provide variety of 
            products such as Smartphones, Electronics, Computers, Laptops, Multimedia, Accessories etc with quality 
            products and services with best customers care.
          </p>
        </div>

        <div class="col-lg-6 mb-5 mb-lg-0">
          <div class="card">
            <div class="card-body py-5 px-md-5">
              <form method="post" action="/login">
                 {{#if loginErr}}
    <p class="text-danger">{{loginErr}}</p>
    {{/if}}
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example3">Email address</label>
                  <input type="email" id="form3Example3" class="form-control" name="Email" required />
                  
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example4">Password</label>
                  <input type="password" id="form3Example4" class="form-control" name="Password" required />
                  
                </div>

                <!-- Submit button -->
                <label for=""></label>
                <button type="submit" class="btn btn-primary btn-block mb-4">Login</button>
                <a href="/forgot-password">forgot password?</a>
                  <br>
                  <label class="form-label" for="form3Example4">Dont have an account?</label>
                  <a href="/signup">Create new account</a>
                
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->