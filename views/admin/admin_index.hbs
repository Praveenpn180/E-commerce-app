<script>
     // Doughnut Chart
    var ctx6 = document.getElementById('payment').getContext("2d");
    var myChart6 = new Chart(ctx6, {
        type: "doughnut",
        data: {
            labels: ["COD", "RazorPay"],
            datasets: [{
                backgroundColor: [
                    "rgba(0, 156, 255, .7)",
                    "rgba(0, 156, 255, .3)"
                ],
                data: [{{cashOnDelivery}}, {{onlinePayment}}]
            }]
        },
        options: {
            responsive: true
        }
    });

    // Single Bar Chart
    var ctx4 = document.getElementById('saleDetails').getContext("2d");
    var myChart4 = new Chart(ctx4, {
        type: "bar",
       
        data: {
            
             labels: ["Delivered", "Shipped", "Placed", "Pending", "Cancelled"],
            datasets: [{
                 label:'Order Details',
                backgroundColor: [
                    "rgba(0, 156, 255, .7)",
                    "rgba(0, 156, 255, .6)",
                    "rgba(0, 156, 255, .5)",
                    "rgba(0, 156, 255, .4)",
                    "rgba(0, 156, 255, .3)"
                ],
                data: [{{delivered}}, {{shipped}}, {{placed}}, {{pending}}, {{cancelled}}]
            }]
        },
        options: {
            responsive: true
        }
    });
</script>