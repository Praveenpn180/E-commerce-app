<div class="row tm-content-row tm-mt-big">
                <div class="col-xl-12 col-lg-12 tm-md-12 tm-sm-12 tm-col">
                    <div class="bg-white tm-block h-100">
                      
                            <div class="col-md-8 col-sm-12">
                                <h2 class="tm-block-title d-inline-block">Users</h2>

                            </div>
<div class="container">

<table class="table table-hover table-striped tm-table-striped-even mt-3" id="usersTable">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Modify</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{inc @index}}</th>
      <td>{{firstName}}</td>
      <td>{{lastName}}</td>
      <td>{{email}}</td>
      <td>{{phone}}</td>
      <td>
        {{#if userBlocked}}
        <a class="btn btn-warning" href="/admin/unBlock-user/{{this._id}}">Unblock</a>
        {{else}}
          <a class="btn btn-primary" href="/admin/Block-user/{{this._id}}">Block</a>
          {{/if}}
          <a class="btn btn-danger" onclick="return confirm('Are you sure you want to delete {{this.Name}} ?')" href="/admin/delete-user/{{this._id}}">Delete</a>
          </td>
    </tr>
   {{/each}}
  </tbody>
</table>

</div>
</div>
</div>
</div>

<script>
    $(document).ready(function () {


        $('#usersTable').wrap('<div id="hide" style="display:none"/>');

        $('#hide').css('display', 'block');
    });


    var table = $('#usersTable').DataTable();
</script>
