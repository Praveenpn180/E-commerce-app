<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
	integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">




<div class="container-fluid">

	<body class="animsition">
		<!-- Slider -->


		<div class="container " style="width:80% ;">
			<div class="row d-flex justify-content-around">
				<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
					<div class="carousel-inner">
						<div class="carousel-item active">
							<img src="/banner-images/{{slider1.Name}}.jpg" class="d-block w-100" alt="...">
							<div class="carousel-caption d-none d-md-block">
								<h5 class="text-warning">{{slider1.Category}}</h5>
								<p class="text-warning">{{slider1.Description}}</p>
							</div>
						</div>
						<div class="carousel-item">
							<img src="/banner-images/{{slider2.Name}}.jpg" class="d-block w-100" alt="...">
							<div class="carousel-caption d-none d-md-block">
								<h5 class="text-warning">{{slider2.Category}}</h5>
								<p class="text-warning">{{slider2.Description}}</p>
							</div>
						</div>
						<div class="carousel-item">
							<img src="/banner-images/{{slider3.Name}}.jpg" class="d-block w-100" alt="...">
							<div class="carousel-caption d-none d-md-block">
								<h5 class="text-warning">{{slider3.Category}}</h5>
								<p class="text-warning">{{slider3.Description}}</p>
							</div>
						</div>
					</div>
					<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
						data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Previous</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
						data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Next</span>
					</button>
				</div>


			
				<div class="container mt-5">
					<div class="row d-flex justify-content-around ">
						<div class="col-md-5   border border-dark mb-5">
							<h1>Sliding Banner</h1>
							<form action="/admin/updateBanner" method="post" enctype="multipart/form-data">

								<select class="form-select form-select-md mb-3 form-control"
									aria-label=".form-select-lg example" name="Name" required>
									<option value="slider1">Sliding Banner1</option>
									<option value="slider2">Sliding Banner2</option>
									<option value="slider3">Sliding Banner3</option>
								</select>
								<label for="formGroupExampleInput">Image</label>
								<img class="pt-3" src="" alt="" style="width: 100px;height: auto ;" id="imgview2">
								<input type="file" name="Image" class="form-control" onchange="viewImage(event)">

								<label for="formGroupExampleInput">Category</label>

								<select name="Category" class="form-select form-select-md mb-3 form-control"
									aria-label=".form-select-lg example" id="formGroupExampleInput" required>
									{{#each category}}
									<option value="{{Category}}">{{Category}}</option>
									{{/each}}
								</select>

								<label for="Description">Description</label>
								<input type="text" name="Description" id="" required>
								<button class="btn btn-outline-primary" type="submit">Submit</button>
							</form>
						</div>

					</div>
				</div>



				<!-- Banner -->


				<div class="container">
					<div class="row d-flex justify-content-around ">
						<div class="col-sm-4 ">
							<div class="card border border-dark" style="width: 18rem;">
								<img src="/banner-images/{{banner1.Name}}.jpg" class="card-img-top" alt="...">
								<div class="carousel-caption d-none d-md-block">
									<h5 class="card-title text-warning">{{banner1.Category}}</h5>
									<p class="card-text text-warning"> {{banner1.Description}}</p>

								</div>
							</div>
						</div>

						<div class="col-sm-4 ">
							<div class="card border border-dark" style="width: 18rem;">
								<img src="/banner-images/{{banner2.Name}}.jpg" class="card-img-top" alt="...">
								<div class="carousel-caption d-none d-md-block">
									<h5 class="card-title text-warning">{{banner2.Category}}</h5>
									<p class="card-text text-warning"> {{banner2.Description}}</p>

								</div>
							</div>
						</div>

						<div class="col-sm-4  ">
							<div class="card border border-dark" style="width: 18rem;">
								<img src="/banner-images/{{banner3.Name}}.jpg" class="card-img-top" alt="...">
								<div class="carousel-caption d-none d-md-block">
									<h5 class="card-title text-warning">{{banner3.Category}}</h5>
									<p class="card-text text-warning">{{banner3.Description}}</p>

								</div>
							</div>
						</div>

					</div>
				</div>

				<div class="container mt-5">
					<div class="row d-flex justify-content-around ">
						<div class="col-md-5   border border-dark mb-5">
							<h1>Category Banner</h1>
							<form action="/admin/updateBanner" method="post" enctype="multipart/form-data">

								<select class="form-select form-select-md mb-3 form-control"
									aria-label=".form-select-lg example" name="Name" required>
									<option value="banner1">Banner Left Side</option>
									<option value="banner2">Banner Middle</option>
									<option value="banner3">Banner Right Side</option>
								</select>
								<label for="formGroupExampleInput">Image</label>
								<img class="pt-3" src="" alt="" style="width: 100px;height: auto ;" id="imgview3">
								<input type="file" name="Image" class="form-control" onchange="viewImage1(event)">

								<label for="formGroupExampleInput">Category</label>

								<select name="Category" class="form-select form-select-md mb-3 form-control"
									aria-label=".form-select-lg example" id="formGroupExampleInput" required>
									{{#each category}}
									<option value="{{Category}}">{{Category}}</option>
									{{/each}}
								</select>

								<label for="Description">Description</label>
								<input type="text" name="Description" id="" required>
								<button class="btn btn-outline-primary" type="submit">Submit</button>
							</form>
						</div>

					</div>
				</div>
	</body>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
	integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
	crossorigin="anonymous"></script>
<script>
	function viewImage(event) {
		document.getElementById('imgview2').src = URL.createObjectURL(event.target.files[0])
	}
</script>
<script>
	function viewImage1(event) {
		document.getElementById('imgview3').src = URL.createObjectURL(event.target.files[0])
	}
</script>