<div class="col-md-3">
            <a id="" class="btn btn-success ml-auto" href="#"  onclick="addcoupon()">New coupon</a>
        </div>

 <div class="col-sm-12 col-xl-6" style="display:none;" id="addcoupon">
                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">New Coupon</h6>
                            <form action="/admin/add-coupon" method="post">
                                <div class="row mb-3">
                                    <label for="coupon" class="col-sm-2 col-form-label">Coupon Code</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="coupon" name="couponCode" oninput="this.value = this.value.toUpperCase()">
                                    </div>
                                </div>
                                <fieldset class="row mb-3">
                                    <legend class="col-form-label col-sm-2 pt-0">Offer Type</legend>
                                    <div class="col-sm-10">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="offerType"
                                                id="gridRadios1" value="percentage" checked>
                                            <label class="form-check-label" for="gridRadios1">
                                                Percentage
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="offerType"
                                                id="gridRadios2" value="rupees" disabled>
                                            <label class="form-check-label" for="gridRadios2">
                                                Rupees
                                            </label>
                                        </div>
                                    </div>
                                </fieldset>
                                <div class="row mb-3">
                                    <label for="Coupon details" class="col-sm-2 col-form-label">Coupon Value</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control" id="coupon details" name="couponValue" maxlength="3" >
                                    </div>
                                </div>
                                  <div class="row mb-3">
                                    <label for="Coupon details" class="col-sm-2 col-form-label">Validity in Days</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control" id="coupon details" name="validity">
                                    </div>
                                </div>
                                
                              
                                
                                <button type="submit" class="btn btn-primary">Create</button>
                            </form>
                        </div>
                    </div>
                     <div class="col-sm-12 col-xl-9">
                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">Active Coupon</h6>
                            <table class="table table-dark">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Coupon Code</th>
                                        <th scope="col">Offer details</th>
                                        
                                        <th scope="col">Validity in days</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each coupons}}
                                    <tr>
                                        <th scope="row">{{inc @index}}</th>
                                       <td>{{couponCode}}</td>
                                        <td>{{couponValue}} {{offerType}} off on all products</td>
                                       
                                        <td>{{validity}} days from <br>{{createdOn}}</td>
                                        <td> <a  class="btn btn-outline-danger" href="/admin/deleteCoupon/{{_id}}">Delete</a></td>
                                    </tr>
                                   {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <style>
                        input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

                    </style>

                    <script>
                          x.style.display = "block"
function addcoupon() {
  var x = document.getElementById("addcoupon");
  if (x.style.display === "none") {
    x.style.display = "block";
  } else {
    x.style.display = "none";
  }
}
                    </script>