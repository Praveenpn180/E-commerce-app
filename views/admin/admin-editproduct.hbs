
<body class="bg02">
    <div class="container">

        <!-- row -->
        <div class="row tm-mt-big">
            <div class="col-xl-8 col-lg-10 col-md-12 col-sm-12">
                <div class="bg-white tm-block">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">Edit Product</h2>
                        </div>
                    </div>
                    <div class="row mt-4 tm-edit-product-row">
                        <div class="col-xl-7 col-lg-7 col-md-12">
                            <form action="/admin/edit-product/{{product._id}}" class="tm-edit-product-form" method="post" enctype="multipart/form-data">
                                <div class="input-group mb-3">
                                    <label for="name" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">Product
                                        Name
                                    </label>
                                    <input value="{{product.Name}}" value="In malesuada placerat" id="name" name="Name" type="text" class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7">
                                </div>
                                <div class="input-group mb-3">
                                    <label for="description" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 mb-2">Description</label>
                                    <input class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7" name="Description" rows="3" value="{{product.Description}}" required></input>
                                </div>
                                <div class="input-group mb-3">
                                    <label for="category" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">Category</label>
                                    <select name="Category" class=" col-xl-9 col-lg-8 col-md-8 col-sm-7" id="category">
                                        <option value="{{product.Category}}" selected>{{product.Category}}</option>
                                        {{#each category}}
                                         <option id="formGroupExampleInput" value="{{Category}}">{{Category}}</option>
                                         {{/each}}
                                    </select>
                                </div>
                                <div class="input-group mb-3">
                                    <label for="Price" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">Price
                                    </label>
                                    <input value="{{product.Price}}" type="number" name="Price"  class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7"
                                        data-large-mode="true">
                                </div>
                                <div class="input-group mb-3">
                                    <label for="stock" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">Units In
                                        Stock
                                    </label>
                                    <input placeholder="Stock" value="255" id="stock" name="stock" type="number" class="form-control validate col-xl-9 col-lg-8 col-md-7 col-sm-7">
                                </div>
                                      <div class="col-xl-4 col-lg-4 col-md-12 mx-auto mb-4">
                            <img src="/product-images/{{product._id}}.jpg" alt="Product Image" class="img-fluid mx-auto d-block" style="width: 100px;height: auto ;" id="imgview">
                            <div class="custom-file mt-3 mb-3">
                                <input id="fileInput" name="Image" type="file" style="display:none;" onchange="viewImage(event)" />
                                <input type="button" class="btn btn-primary d-block mx-auto" value="Upload ..." onclick="document.getElementById('fileInput').click();"
                                />
                            </div>
                        </div>







                                <div class="input-group mb-3">
                                    <div class="ml-auto col-xl-8 col-lg-8 col-md-8 col-sm-7 pl-0">
                                        <button type="submit" class="btn btn-primary">Update
                                        </button>
                                    </div>
                                </div>
                               




                            </form>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
        
    </div>

   
</body>

  




</div>
</section>
<script>
   function viewImage(event){
    document.getElementById('imgview').src=URL.createObjectURL(event.target.files[0])
   }
</script>

 